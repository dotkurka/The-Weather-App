{
  "name": "the-wether-and-github-app",
  "private": true,
  "description": "The Wether App by Ostap Kurka",
  "author": "dotkurka <ostapkurka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "setup": "yarn setup:husky && yarn setup:env",
    "setup:env": "cp ./apps/backend/example.env ./apps/backend/.env && cp ./apps/frontend/example.env ./apps/frontend/.env",
    "setup:husky": "yarn setup:husky:nvm && rimraf .husky/pre-commit .husky/commit-msg && husky install && husky add .husky/pre-commit 'yarn pre-commit' && npx husky add .husky/commit-msg 'npm run commitlint ${1}'",
    "setup:husky:nvm": "cp ./.husky/.huskyrc ~/.huskyrc",
    "deploy": "turbo run deploy",
    "build:tsc-only": "turbo run build:tsc-only",
    "pre-commit": "yarn lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tsconfig": "*",
    "turbo": "^2.0.4"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "yarn": ">=1.22.0 <2.0.0"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {},
  "lint-staged": {
    "*.(md|json)": "prettier --write"
  }
}
